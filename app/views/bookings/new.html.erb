<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @body.title %></h1>
      <p><%= @body.owner.first_name %> <%= @body.owner.last_name %>'s body</p>
      <p>Price: <%= @body.price_per_day %> UN credit</p>
      <p>Sex: <%= @body.sex %> </p>
      <p>Description: <%= @body.description %></p>
      <%= simple_form_for [@body, @booking] do |f| %>
        <%= f.input :date_in, as: :string, required: false, input_html: {id: "range_start"} %>
        <%= f.input :date_out, as: :string, required: false, input_html: {id: "range_end"} %>
        <%= f.button :submit, "Book", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
