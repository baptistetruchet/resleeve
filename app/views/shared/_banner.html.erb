<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.4) 50%), url('https://images.unsplash.com/photo-1500004621732-74cd4ad4d53e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=32fa64a2e096b05b95c10eb31cc9b118&auto=format&fit=crop&w=2849&q=80');">

  <div class="banner-content">

    <h1 class="text-left">ReSleeve</h1>
    <p class="text-left">Book unique bodies all over the world.</p>


    <%= form_tag(bodies_path, method: :get, class: "input-group") do %>
      <%= text_field_tag :location, "", class: "form-control", placeholder: "Location" %>
      <span class="input-group-btn">
        <%= submit_tag 'Go!', class: "btn btn-default" %>
      </span>
    <% end %>

  </div>
</div>
