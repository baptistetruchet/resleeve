<div class="container">

  <h1><%= @conversation.booking.body.title %></h1>

  <div class='messages'>
    <% @conversation.messages.each do |message| %>

      <% myclass = message.sender == current_user ? "mine" : "yours" %>

      <div class="flex-message-<%= myclass == "mine" ? "right" : "left" %>">
        <p class="message <%= myclass %>">
          <%= message.content %>
        </p>
      </div>

    <% end %>
  </div>
  <%= simple_form_for [@conversation, Message.new] do |f| %>
    <%= f.input :content, placeholder: 'New message', label: false, input_html: { class: 'myclass'}%>
    <%= f.submit "Send", class: "btn btn-primary btn-margin" %>
  <% end %>
</div>
