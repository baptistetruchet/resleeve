<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 offset-md-3">
      <h1>Offer a new sleeve</h1>
      <%= simple_form_for(@body) do |f| %>
        <%= f.input :title %>
        <%= f.input :location%>
        <%= f.input :sex %>
        <%= f.input :price_per_day, :label => "Price per day (in UN Credits)" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :description %>
        <%= f.submit "Add body", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
