<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <%= render "form_filter" %>
      <h1>ReSleeve</h1>
    </div>
  </div>
  <div class="main-list">
    <% if @bodies.length == 0 %>
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <p>No results were found for your request</p>
        </div>
      </div>
    <% end %>
    <% @bodies.each do |body| %>
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <div class="card">
            <div class="upvote">
              <% body.rating.times do %>
                <i class="fas fa-star"></i>
              <% end %>
            </div>
            <div>
              <p><%= body.price_per_day %>â‚¬/day</p>
            </div>
            <% if body.photo.blank? %>
              <img class= "picture" src='http://t2.gstatic.com/images?q=tbn:ANd9GcTQAyGur4I5mDxm8MOht3DJi3SRyJHIKIkHBJYAPxr_p2UlCLwc'>
            <% else %>
              <%= cl_image_tag body.photo, height: 200 %>
            <% end %>
            <div class="info">
              <h2><%=  link_to body.title, new_body_booking_path(body.id) %></h2>
              <p><%= body.location %></p>
            </div>
            <% if policy(body).destroy? %>
              <div class="delete">
                <%= link_to body_path(body.id),
                method: :delete,
                data: { confirm: "Are you sure?"} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>

</div>
