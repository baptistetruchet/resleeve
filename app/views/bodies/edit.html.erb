<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1 id="title-offer-sleeve">Edit sleeve</h1>
      <%= simple_form_for(@body) do |f| %>
        <%= f.input :title, input_html: { id: "range_start", class: 'myclass'}, label: false, placeholder: "Title" %>
        <%= f.input :location, input_html: { id: "range_start", class: 'myclass'}, label: false, placeholder: "Location" %>
        <%= f.input :sex, input_html: { id: "range_start", class: 'myclass'}, label: false, placeholder: "Sex"  %>
        <%= f.input :price_per_day, input_html: { id: "range_start", class: 'myclass'}, label: false, placeholder: "Price per day"  %>
        <%= f.input :description, input_html: { id: "range_start", class: 'myclass'}, label: false, placeholder: "Description"  %>
        <%= f.submit "Edit body", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
