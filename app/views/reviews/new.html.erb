<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 offset-md-3">
      <h1>Create a new review for <%= @booking.body.title %></h1>
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

